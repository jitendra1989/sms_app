<button class="new-event-type-btn mg-btn-bottom-margin mg-custom-form-btn"><%#= t('delete') %><%= t('createneweventtype')%></button>  
<h4 class="mg-h4"><%= t('eventtypelist')%></h4>
<%if @event_types.length>0%>
<div class="mg_pagination">
<table class="batch-tbl mg-tbl-margin">   <!-- border="2" --> 
 <tr >
  	<th><%=t('name')%></th>
    <th> <%=t('eventcolor')%></th>
    
     <th><%=t('actions')%></th>
     

  </tr>
  <% @event_types.each do |e| %>
    <tr>
      <td><%= e.name %></td>

      <td style="color: <%= e.event_color%>"><%#if e.event_color=='Black'%>

       <%= e.event_color%><span style="background-color:<%= e.event_color%>;"><span>     </span>
      
      </span>
      </td>

     
          

     </td>
      <td>
        <button title="Show" id="<%=raw e.id %>-showEventTypeBTNID" class="show-event-type-btn mg-icon-btn"><i class="fa fa-eye"></i></button>
        <button title="Edit" id="<%=raw e.id %>-editEventTypeBTNID" class="edit-event-type-btn mg-icon-btn"><i class="fa fa-pencil-square-o"></i></button>
        <button title="Delete" id="<%=raw e.id %>-deleteEventTypeBTNID" class="delete-event-type-btn mg-icon-btn"><i class="fa fa-trash"></i></button></td>
    </tr>
  <% end %>
</table>
 <%= will_paginate @event_types, :container => false %>
  </div>
<%else%>
  <h5>No Event Types created..</h5>
<%end%>

<div id="editEventTypeDIVID"></div>
<div id="showEventTypeDIVID"></div>
<div id="deleteEventTypeDIVID"></div>
<div id="newEventTypeDIVID"></div>



<script>

      $(document).ready(function () {
       
        $("li").removeClass( "active" );
        $("a").removeClass( "activeMenu" );

        $("#viewAdminEventTypesLiID").addClass( "active" );
        $("#viewAdminEventTypes").addClass( "activeMenu" );

        focusEvent();
      });


</script>  

