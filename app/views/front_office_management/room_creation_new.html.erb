<%= form_for :room_creation_type ,:url=> {:action=>'room_creation_create' }, :html=>{ :id=> 'room_creation_fom_id' } do |f| %>
  <%= f.hidden_field :mg_school_id , :value=> session[:current_user_school_id]%>
  <%= f.hidden_field :created_by, :value => session[:user_id]%> 
  <%= f.hidden_field :updated_by, :value => session[:user_id]%> 
  <%= f.hidden_field :is_deleted, :value => 0%> 
  <p>
   <%= f.label :room_no , t('room_no_name'), :class=> "mg-label"%> <span class="required-field"> *</span><br>
   <%= f.text_field :room_no %>
  </p>
  <p>
   <%= f.label :room_no , t('room_type'), :class=> "mg-label"%> <span class="required-field"> *</span><br>
   <%= f.text_field :type_of_room %>
  </p>
  <p>
   <%= f.label :room_no , t('capacity'), :class=> "mg-label"%> <span class="required-field"> *</span><br>
   <%= f.text_field :capacity %>
  </p>



<p class="mg-p-mgtop">
<a onclick="$(this).closest('form').submit()" class="mg-small-form-btn"> <%= t('save') %></a>
<a class="mg-small-form-btn cancel-form-dialog"><%=t('cancel')%></a>
  </p>

<% end %>

<script>
$(document).ready(function () {
  $("#room_creation_fom_id").validate({
    rules: {
      "room_creation_type[room_no]": {required: true},
      "room_creation_type[type_of_room]": {required: true, character_validate: true},
      "room_creation_type[capacity]": {required: true, number: true}
    }
  });
});
</script>
