<%= render  partial: 'vehicle_left' %>

<%# navigation_add 'Vehicles', vehicles_path %>
<% navigation_add 'Report Type', vehicles_report_type_index_path %>


  <%if flash[:error].present?%>
  <div class="alert alert-info mg-success-msg">

   <%=flash[:error]%>
   </div>
  <%end%>

<h4 class="mg-h4"><%=t('report_types_list')%></h4>

<button  id="create_report_details_class" class="mg-vehicle-btn-width mg-custom-form-btn">Create Report</button>



<div id="create_dialog_box">
</div>

<% if @all_report_type.length > 0 %>

 <div class="mg_pagination">
 
<div id="report_type_datasShow">
</div>
<div id="report_type_datasEdit">
</div>


    <table class="batch-tbl mg-tbl-margin" cellspacing="0" style="padding:0; border-collapse:collapse;">   <!-- border="2" --> 
      <tr >
        <th><%=t('report_type_name')%></th>
        
        <th align="center"><%=t('actions')%></th>
       </tr>

    <%@all_report_type.each do |report_type| %>
	      <tr>
	        <td><%=report_type.report_type_name%></td>

	      <td class="mg-align-center">
	   <!-- 
	           <button title="Show" id='<%#=report_type.id %>' class="show-report-type-details-class mg-icon-btn"><i class="fa fa-eye"></i></button> -->
	           <button title="Edit" id='<%=report_type.id %>' class='edit-report-type-details-class mg-icon-btn'><i class="fa fa-pencil-square-o"></i></button>           
	         <span class="mg-a-link-pagination-align" style="left: -2px; position: relative; float: right; top: -2px;">
	           <%= link_to "<i class=\"fa fa-trash\"></i>".html_safe ,{ action: "report_type_destroy", id: report_type.id },data: { confirm: "Are you sure to delete the selected entry?" } ,:title=>"Delete" ,:class=>"mg-icon-btn"  %>
               </span>
           </td>
	      </tr>

     <% end %>
	</table>
 <%= will_paginate @all_report_type, :container => false %>
</div>
	<% else %>
	  <h5>Please create some Report Type... </h5>

	<% end %>

