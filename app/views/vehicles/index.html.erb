<%= render  partial: 'vehicle_left' %>

<% navigation_add 'Vehicles', vehicles_path %>
<div id="vehicle_datasEdit">
  <%if flash[:error].present?%>
  <div class="alert alert-info mg-success-msg">

   <%=flash[:error]%>
   </div>
  <%end%>

<h4 class="mg-h4"><%=('vehicle')%></h4>

<%= button_to 'Create Vehicle', {:controller => "vehicles", :action => "new"},:class=>"mg-custom-form-btn" %>
<% if @all_vehicle_data.length > 0 %>
    <div class="mg_pagination">

<div id="vehicle_datasShow">
</div>



    <table class="batch-tbl mg-tbl-margin" cellspacing="0" style="padding:0; border-collapse:collapse;">   <!-- border="2" --> 
      <tr >
        <th><%=t('vehicle_number')%></th><br>
        <th><%=t('make')%></th>
        <th class="mg-rm-text-trans"  for="noofSeats"><%= t ('no_of_seats') %></th>
        <th align="center"><%=t('actions')%></th>
       </tr>

    <%@all_vehicle_data.each_with_index do |vehicle| %>
	      <tr>
	        <td><%=vehicle.vehicle_number%></td>
	        <td><%=vehicle.make%></td>
	        <td><%=vehicle.no_of_seats%></td>

	      <td class="mg-align-center">
	   
	           <button title="Show" id='<%=vehicle.id %>' class="show-vehicle-details-class mg-icon-btn"><i class="fa fa-eye"></i></button>
	           <button title="Edit" id='<%=vehicle.id %>' class='edit-vehicle-details-class mg-icon-btn'><i class="fa fa-pencil-square-o"></i></button>           
	           <span class="mg-a-link-pagination-align" style="left: -2px; position: relative; float: right; top: -2px;">
	           <%= link_to "<i class=\"fa fa-trash\"></i>".html_safe ,{ action: "destroy", id: vehicle.id },
                                method: :delete, data: { confirm: "Are you sure to delete the selected entry?" } ,:title=>"Delete" ,:class=>"mg-icon-btn"  %>
               </span>
           </td>
	      </tr>

     <% end %>
	</table>
 <%= will_paginate @all_vehicle_data, :container => false %>
 </div>
	<% else %>
	  <h5>Please create some vehicle... </h5>

	<% end %>
</div>
  
<%=render partial: 'vehicle_left_close'%>

<script>
$(document).ready(function () {
         
          focusCurrentTab("timeTableAssociateAID","vehiclemanagementAssociateLiID");
          

          
      });
</script>