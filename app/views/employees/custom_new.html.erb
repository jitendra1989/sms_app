<% navigation_add 'Employee Custom Field', :controller => 'employees', :action => 'custom_new' %>

<!-- breadcrumbs Work -->



<!-- Sec --> 
<%= render  partial: 'master_settings/master_settings_left.html' %>

<h4 class="mg-h4">Employee Custom Fields </h4>
<div>
<%= button_to "Create Employee Custom Field", { :controller=> "employees", :action=> "custom_index"} ,:class=>"mg-custom-form-btn" %>
<%#=link_to "Create  Custom Field", controller: "employees", action: "custom_index"%>
<% if(@dbdatas.length > 0) %>
    
    <table class="batch-tbl mg-tbl-margin">
      <tr>
              <th>Field Name</th>
              <th>Field Type</th>
              <th>Default Value</th>
              <th><%=t('actions')%></th>
     </tr>
              <% @dbdatas.each do |emp| %>
      <tr>
              <td><%=emp.name %></td>
              <% 
                temp=emp.data_type.split("_") 
                str=temp[0].split.map(&:capitalize).join(' ')+" "+temp[1]
            %>
            <td><%=str%></td>
              <td><%=emp.text_data %></td>
              <td colspan="2">
                  <button title="Edit" id="editCustum-<%=raw emp.id %>" class="edit-employee-custum-fields mg-icon-btn"><i class="fa fa-pencil-square-o"></i></button>
                  <button title="Delete" class="delete-employee-custum-field mg-icon-btn" id="deleteCustumID-<%= emp.id%>"><i class="fa fa-trash"></i></button>
              </td>
      </tr>
      <%end%>
    </table>
<% else %>
  <h5>Please add some custom fields for Employee</h5>

<% end %>
<div id="editEmployeeCustomFieldDialogID"></div>
</div>
<%= render partial: 'emp_section_close' %>


