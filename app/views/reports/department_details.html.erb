<h4 class="mg-h4">Department Details</h4>
<table class="batch-tbl">
	<tr>
		<th>Department Name</th>
		<th>Department Code</th>
		<th>Total Male Employee</th>
		<th>Total Female Employee</th>
		<th>Total Employee</th>
	</tr>
	<%@departments.each do |department|%>
	<tr>
		<td><%=department.department_name%></td>
		<td><%=department.department_code%></td>
		<%
			@employee=MgEmployee.where(:mg_employee_department_id=>department.id,:is_deleted=>0)
			@male_employee=@employee.where(:gender=>"male")
			@female_employee=@employee.where(:gender=>"female")
		%>
		<td><%=@male_employee.length%></td>
		<td><%=@female_employee.length%></td>
		<td><%=@employee.length%></td>
	</tr>
	<%end%>
</table>