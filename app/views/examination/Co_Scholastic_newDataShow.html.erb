<%= render  partial: 'examination_table_left' %>
<h4 class="mg-h4">Co-Scholastic Data</h4>
<div>
<button class="Co-Scholastic-new-datas mg-custom-form-btn mg-btn-bottom-margin" id='<%=@observation.id%>'>New </button><br/>

<label class="mg-label"><%="Name :"%></label>

<span class="mg-font-size"><%=@observation.name%></span><br>
<label class="mg-label"><%="Header :"%></label>
<span class="mg-font-size"><%=@observation.header_name%></span><br>
<label class="mg-label"><%="Description :"%></label>
<span class="mg-font-size"><%=@observation.description%></span><br>
<label class="mg-label"><%="Grade Set :"%></label>
<%if @observations.present?%>
<span class="mg-font-size"><%=@observations.name%></span><br/>
<%end%>



<div id="Co_Scholastic_sub_datas">
</div>
<div id="Co_Scholastic_sub_datasEdit">
</div>





<table class="batch-tbl mg-tbl-margin" cellspacing="0" style="padding:0; border-collapse:collapse;">

 
<%if  @criteria[0].to_s.empty? %>
<h5><%="No Records Found"%></h5>
<%else%>

  <tr>
    <th>Name</th>
    <th>Description</th>
    <th><%=t('actions')%></th>
  </tr>
  <% @criteria.each do |data| %>
    <tr>
      <td><a href="/examination/Co_Scholastic_newIndicatorData/<%=raw data.id%>" class="co-scholastic-show-class"><%= data.name %></a></td>
      <td><a href="/examination/Co_Scholastic_newIndicatorData/<%=raw data.id%>" class="co-scholastic-show-class"><%= data.description %></a></td>

      <td>
        <a  id=<%=raw data.id%> class="Co-Scholastic-sub-edit-class"><button title="Edit" class="mg-text-exam mg-icon-btn"><i class="fa fa-pencil-square-o"></i></button></a>
        <a  id=<%=raw data.id%> class="Co-Scholastic-sub-delete-class"><button title="Delete" class="mg-text-exam mg-icon-btn"><i class="fa fa-trash"></i></button></a>
      </td>
    </tr>
  <% end %>
  <%end%>
</table>
</div>
<%= render  partial: 'examination_table_close' %><br/>
