
<%= form_for :grades,:url=>{:controller=>'examination',:action=>'add_new_grade'},:html => {:id => 'feeCategoryCreateFormId', :class => 'elm_class',:style => 'elm_style' } do |f| %>

    <%=f.hidden_field :mg_batch_id,:value=>@batchId%>

    <%=f.hidden_field :mg_school_id,:value=>session[:current_user_school_id]%>

  <div style="float:left;"> 

      <p>
      <label class="mg-label" for="grades"> <%= t('grades') %></label><span class="required-field">&nbsp;*</span><br/>
        
        <%= f.text_field :name ,:class=>"mg-text-field"%>
      </p>
     
      <p>
        <label class="mg-label" for="min_score"> <%= t('min_score') %><span class="required-field">&nbsp;*</span></label><br/>

        <%= f.text_field :min_score ,:class=>"mg-text-field"%>
      </p>
      <p>
      <label class="mg-label" for="description"> <%= t('description') %></label><br/>
        
        <%= f.text_area :description ,:class=>"mg-text-field"%>
      </p>

       
<p>        
      <label class="mg-label" for="credit_points"> <%= t('credit_points') %></label><br/>
        <%= f.text_field :credit_points ,:class=>"mg-text-field"%>
      </p>

      

<div style="display:none;">
      <p>
        <label for="is_deleted" class="mg-label "><%=t('status')%></label><br />
        <label for="is_deleted" class="mg-label-inner-form "><%=t('active')%></label>
        <%= f.radio_button :is_deleted, false , :checked => true%>
        <label for="is_deleted" class="mg-label-inner-form "><%=t('inactive')%></label>
        <%= f.radio_button :is_deleted, true %>
      </p>
</div>
      <p>
      <%#= f.submit t('save') ,:class=>"mg-small-form-btn" %>
      <a onclick="$(this).closest('form').submit()" class="mg-small-form-btn"><%=t("save")%></a>
       <%= link_to t('cancel'), :back, {:class=>"mg-small-form-btn cancel-form-dialog"} %>
      </p>


<%end%>

<script>
 $("#feeCategoryCreateFormId").validate({
        //debug: true,
        rules: {
                  "grades[name]": {required: true},
                  "grades[min_score]": {required: true,number: true},
                  "grades[credit_points]": {number: true}
                      
        }
      });
 
</script>