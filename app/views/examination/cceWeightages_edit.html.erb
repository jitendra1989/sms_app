<%= f.hidden_field :mg_school_id ,:value=> session[:current_user_school_id]%>


      <p>
        <label class="mg-label" for="weightages"> <%= t('weightages') %></label><span class="required-field">&nbsp;*</span><br/>
        <%= f.text_field :weightages ,:class=>"mg-text-field"%>
      </p>
     
<p>

    <label class="mg-label" for="criteria_type"> <%= t('criteria_type') %></label><span class="required-field">&nbsp;*</span><br/>
    <%= f.select :criteria_type, options_for_select([["FA","Fa"], ["SA","SA"]],:selected=>@cceWeightage[:criteria_type]),{:include_blank => 'Select'} ,:class=>"mg-select-btn"%>
    <!-- <label class="mg-label" for="criteria_type"> <%#= t('criteria_type') %></label><br/> -->
