<%= form_for :assessments, :url=>{:controller=>'examination',:action=>'scholastic_formativeAssessmentUpdate',:id=>@assessments.id},:html => {:id => 'scholasticEditsCategoryNewFormId', :class => 'elm_class',:style => 'elm_style' } do |f| %>

  <div style="float:left;"> 

      <p>
         <label class="mg-label" for="name"> <%= t('name') %><span class="required-field">&nbsp;*</span></label><br/>
        <%= f.text_field :name ,:class=>"mg-text-field"%>
      </p>
      <p>
  <label class="mg-label" for="description"> <%= t('description') %></label><br/>      
        <%= f.text_area :description ,:class=>"mg-text-field"%>
      </p>
      <p>
       <label class="mg-label" for="max_marks"> <%= t('max_marks') %><span class="required-field">&nbsp;*</span></label><br/>
        <%= f.text_field :max_marks,:value=>100.0,:class=>"mg-text-field"%>
      </p>
     
<p>
<label class="mg-label" for="cce_exam_categorie"> <%= t('cce_exam_categories') %><span class="required-field">&nbsp;*</span></label><br/>
<%=f.select :mg_cce_exam_category_id, options_for_select(@assesment,:selected=>@assessments.mg_cce_exam_category_id),{:include_blank=>"Select Exam Category"} ,:class=>"mg-select-btn"%><br>
      </p>
<div style="display:none;">
  <p>
    <label for="is_deleted" class="mg-label "><%=t('status')%></label><br />
    <label for="is_deleted" class="mg-label-inner-form "><%=t('active')%></label>
    <%= f.radio_button :is_deleted, false , :checked => true%>
    <label for="is_deleted" class="mg-label-inner-form "><%=t('inactive')%></label>
    <%= f.radio_button :is_deleted, true %>
  </p>
</div>
<p class="mg-p-mgtop">
       <%#= f.submit t('save') ,:class=>"mg-small-form-btn"%>
       <a onclick="$(this).closest('form').submit()" class="mg-small-form-btn"><%=t("save")%></a>
       <%= link_to t('cancel'), :back, {:class=>"mg-small-form-btn cancel-form-dialog"} %> 
</p>
<%end%>


<script>
 $("#scholasticEditsCategoryNewFormId").validate({
        //debug: true,
        rules: {
                  "assessments[name]": {required: true},
                  "assessments[max_marks]": {required: true},
                  "assessments[mg_cce_exam_category_id]": {required: true}
        }
      });
 
</script>