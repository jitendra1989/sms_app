<%= render partial: 'fee_left' %>
<div id="createfineFeeParticularDivId">
</div>
<h4 class="mg-h4">Fine Particular List</h4>
<button id='create_ids'  class="creates_new_clss mg-custom-form-btn mg-btn-bottom-margin">Create New Fine Particular</button>
<% if @fineparticular.length > 0 %>
  <div class="mg_pagination">   
    <table class="batch-tbl mg-tbl-margin" > 
        <tr >       
         <th>Fine Name</th>
         <th> Description </th>      
         <th>Fine From</th>
         <th>Amount</th> 
         <th style="width: 9em;"><%=t('actions')%></th>
        </tr>
      <% @fineparticular.each do |sub| %><!--alldata.each_with_index { |(key, value), index| -->
        <tr>
          <td><%= sub.fine_name %></td>
          <td><%= sub.description %></td>
          <td><%=sub.fine_from  %></td>
          <td><%= sub.amount%></td>
          <td>  
            <button title="Show" id='<%=raw sub.id %>' class="show_fine_fee_class mg-icon-btn"><i class="fa fa-eye"></i></button>

            <button title="Edit" id='<%=raw sub.id %>' class="edit_fine_fee_class mg-icon-btn"><i class="fa fa-pencil-square-o"></i></button>
            
            <span style="left: -2px; position: relative; float: right; top: -2px;">
              <%= link_to "<i class=\"fa fa-trash\"></i>".html_safe, { action: "destroy_fee_fine_particular", id: sub.id },method: :get, data: { confirm: "Are you sure?" } ,:title=>"Delete" ,:class=>"mg-icon-btn" %>
            </span> 
          </td> 
        </tr>
      <% end %>
    </table>
    <br/>
        <%= will_paginate @fineparticular, :container => false %>
  </div>
<% else %>
  <h5>Please create some Fine Particular... </h5>
<% end %>  
<div id="showfineFeesParticularDivId"></div>
<div id="createFeeParticularDivId"></div>
