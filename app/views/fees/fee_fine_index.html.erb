<h4 class="mg-h4"><%= t('fee_fine') %></h4>
<div>
<!-- <a href='#' id='createNewFeeFineID'  >Create New Fee Fine </a> -->
<button id='createNewFeeFineID' class="mg-custom-form-btn" >Create New Fee Fine</button>

	<% if @fee_fine_list.length > 0 %>

    <table class="batch-tbl mg-tbl-margin" >   <!-- border="2" --> 
      <tr >
        <th>Fine Name</th><br>
        <th>Fine Description</th>
        <th style="width: 9em;" align="center"><%=t('actions')%></th>
       </tr>

    <%@fee_fine_list.each_with_index do |fine| %>
	      <tr>
	        <td><%= fine.fine_name %></td>
	        <td><%= fine.fine_description %>
	        
	        <td class="mg-align-center">
	   
	           <button title="Show" id='<%=fine.id %>' class="show-fee-fine-class mg-icon-btn"><i class="fa fa-eye"></i></button>
	           <button title="Edit" id='<%=fine.id %>' class='edit-fee-fine-class mg-icon-btn'><i class="fa fa-pencil-square-o"></i></button>           
	           <span style="left: -1px; position: relative; float: right; top: 4px;">
	           <%= link_to "<i class=\"fa fa-trash\"></i>".html_safe ,{ action: "delete_fee_fine", id: fine.id },
                                method: :delete, data: { confirm: "Are you sure?" } ,:title=>"Delete" ,:class=>"mg-icon-btn-link"  %>
               </span>
	      </tr>

    <% end %>
	    </table>

	<% else %>
	  <h5>Please create some Fee Fine... </h5>

	<% end %>

