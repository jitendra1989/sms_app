<script type="text/javascript">
  $( document ).ready(function() {
    focusCurrentTab("corporate_profileAID","corporate_profileLiID");
  });

  $(document).on("click", ".editcorporateClass", function(e){  
            
            var id=$(this).attr("id");
            var emp_id=id.split('-');
          //  alert("hello");
            var urlLink = "/placements/corporate_profile_edit/"+emp_id[1] ;

           
             window.location = urlLink;



        }); 
</script>

