
 <%= form_for :student, url: student_changed_password_path, :html => {
                            :id => 'studentChangePasswordFormID' } do |f| %>
 <!--<#%= form_for :guardian,:html => { :id => 'guardianChangePasswordFormID'}, url: guardian_changed_password_path(@user[0]), method: :patch do |f| %>-->


   <%= f.label :Enter_Current_Password ,:class=> "mg-label"%><span class="required-field">&nbsp;*</span><div id="studentfeedbackcurrentdivId"></div>
   <%= f.password_field :name ,:class=>"mg-text-field" %>
 

 <p>
    <%= f.label :Enter_New_Password ,:class=> "mg-label"%><span class="required-field">&nbsp;*</span><br>
   <%= f.password_field :password,:class=>"mg-text-field",:id=>"newStudentPassword" %>
 </p>
 <div id="studentfeedbackdivId" style="color:#ff0000"></div>
 <p>
    <%= f.label :Re_Enter_Password ,:class=> "mg-label"%><span class="required-field">&nbsp;*</span><br>
   <%= f.password_field :hashed_password ,:class=>"mg-text-field",:id=>"reStudentPassword" %>
 </p>
 
<p class="mg-p-mgtop">
       <%#= submit_tag t('save'), class: "submit mg-change-password-form-btn mg-small-form-btn", id: "submitstudentbutton"%>
       <a onclick="$(this).closest('form').submit()" id="submitstudentbutton" class="submit mg-change-password-form-btn mg-small-form-btn"><%=t("save")%></a>
        <%= link_to t('cancel'), :back, {:class=>"mg-small-form-btn cancel-form-dialog"} %>
</p>
<% end %>




<script>
$(document).ready(function(){
	
	//$("submitstudentbutton").hide();
	$("#reStudentPassword").focusout(function(){
		
		var temp=$("#newStudentPassword").val();
		var tempo=$(this).val();
		if(temp==tempo)
		{
			// $("#studentfeedbackdivId").text("Password matched..");
			//$("submitstudentbutton").show();
		}
		else
		{
			$("#studentfeedbackdivId").text("Password doesn't matches..");
		}
	
		
	});

	$("#studentChangePasswordFormID").validate({
	rules: {
	"student[name]": {required: true},
	"student[password]": {required: true},
	"student[hashed_password]": {required: true,equalTo: '#newStudentPassword'}
	}
	});


});

</script>


