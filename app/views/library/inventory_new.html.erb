  });

$(document).on('change','.library-resource-inventory-new-type-class',function(){
      var type_id = $(this).val();
      if(type_id > 0) {
           var urlLink = "/library/auto_resource_number/"+type_id;
           $.ajax({ 
               url: urlLink,
               cache: false,
               success: function(data){
                if (!(data==""))
                {
                  $("#library_new_resource_number_ID").val(data);
                }
                else
                {
