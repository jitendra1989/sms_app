<h4 class="mg-h4"><%=t('application_settings')%></h4>
<div class="mg-custom-labels">
<button id="editSchoolSettingsBtnID" title="Edit" class="mg-icon-btn"> <i class="fa fa-pencil-square-o"></i> </button>
<div id="schoolSettingDialogID"></div>
                      
	<table class="mg-tbl-size-width mg-tbl-margin">
		  <tr>
          <td class="mg-td-width-half">
            <label class="mg-label mg-long-form-width">Currency Type</label>
			      <label class="mg-label-inner-form"><%= @school.currency_type %></label>
          </td>
          <td class="mg-td-width-half">
            <label class="mg-label mg-long-form-width">Language</label>
			      <label class="mg-label-inner-form"><%= @school.language %></label>
          </td>   
      </tr>
      <tr>
          <td class="mg-td-width-half">
            <label class="mg-label mg-long-form-width">grading_system</label>
			      <label class="mg-label-inner-form"><%= @school.grading_system %></label>
          </td>
          <td class="mg-td-width-half">
            <label class="mg-label mg-long-form-width">date_format</label>
			      <label id="schoolDateFormatID" class="mg-label-inner-form"><%= @school.date_format %></label>
          </td>
      </tr>
      <tr>
          <td class="mg-td-width-half">
            <label class="mg-label mg-long-form-width">Timezone</label>
			      <label class="mg-label-inner-form"><%= @school.timezone %></label>
          </td>
      </tr> 
	</table>
</div>


    <script type="text/javascript">
    $(document).ready(function(){
      dateFormatStr =  getSchoolDateFormat();
    // alert(dateFormatStr);
    $("#schoolDateFormatID").html(dateFormatStr);

    	focusCurrentTab("editSchoolSettingsID","editSchoolSettingsLiID");
    	focusSettings();

    	$(document).on("click","#editSchoolSettingsBtnID",function () {

			//alert("setting btn clicked");
			var urlLink = "/settings/"+5+"/edit";
	       // alert(urlLink);
	        $.ajax({
	            url: urlLink ,
	            cache: false,
	            success: function(html){
	                  $('#schoolSettingDialogID').dialog({
	                    modal: true,
	                    minHeight: 250,
	                    minWidth:450,
	                    title: "Edit Setting",

	                    open: function () {
	                        $(this).html(html);
	                    }
	                }); 
	            }
	        });
    	});
    });
    </script>
