$(document).ready(function(){



  dateFormatSt =  getJsDateFormat();
      $( ".scholarship_date" ).datepicker({ changeMonth: true,
                changeYear: true,yearRange: "-50:+50",dateFormat: dateFormatSt });
});
</script>