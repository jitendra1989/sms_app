     <%= fields_for (addresstype) do |adrs| %>
         <div class="form-content">
          <div class="form-content-inner">         
        <%if addresstype=="Correspondance"%>
        <%= adrs.hidden_field :address_type, :value => "Correspondance" %>
         <h4><%= t('correspondanceaddress') %></h4>
        <%end%>
        <%if addresstype=="Permanent"%>
        <%= adrs.hidden_field :address_type, :value => "Permanent" %>
         <h4><%= t('permanentaddress') %> </h4>
        <%end%>
         <%if addresstype=="workAddress"%>
        <%= adrs.hidden_field :address_type, :value => "workAddress" %>
         <h4><%= t('officeaddress') %> </h4>
        <%end%>
       <%= adrs.hidden_field :is_deleted, :value => 0 %>
        <%= adrs.hidden_field :mg_school_id, :value =>session[:current_user_school_id]%>
            <table class="mg-inner-table-align" width="100%" cellspacing="0" cellpadding="0" border="0" class="student-form-cls">
              <tbody>
                <tr>
                  <td width="33%" valign="bottom">
                    <label class="mg-label" for="address_line1"><%= t('addressline1') %>
                      <span class="required-field">*</span>
                    </label>
                  </td>

                  <td> </td>
                  <td width="33%" valign="bottom">
                    <label class="mg-label" for="address_line2"><%= t('addressline2') %></label>
                  </td>
                  <td> </td>
                  <td width="33%" valign="bottom">
                     <label class="mg-label" for="city"><%= t('city') %></label>
                  </td>
                </tr>
                <tr>
                  <td valign="top">
                     <%= adrs.text_field :address_line1 %>
                  </td>
                  <td> </td>
                  <td valign="top">
                    <%= adrs.text_field :address_line2 %>
                  </td>
                  <td> </td>
                  <td valign="top">
                    <%= adrs.text_field :city %>
                  </td>
                </tr>

                <tr>
                  <td width="33%" valign="bottom">
                    <label for="state"><%= t('state') %>
                      <span class="required-field">*</span>
                    </label>
                  </td>

                  <td> </td>
                  <td width="33%" valign="bottom">
                    <label for="pin_code"><%= t('pincode') %></label>
                  </td>
                  <td> </td>
                  <td width="33%" valign="bottom">
                     <label for="country"><%= t('country') %>
                      <span class="required-field">*</span>
                     </label>
                  </td>
                </tr>
                <tr>
                  <td valign="top">
                     <%= adrs.text_field :state %>
                  </td>
                  <td> </td>
                  <td valign="top">
                    <%= adrs.text_field :pin_code %>
                  </td>
                  <td> </td>
                  <td valign="top">
                    <%= adrs.text_field :country %>
                  </td>
                </tr>
                <tr>
                  <td width="33%" valign="bottom">
                    <label for="landmark"><%= t('landmark') %>
                     
                    </label>
                  </td>
                </tr>
                <tr>
                                  <td valign="top">
                    <%= adrs.text_field :landmark %>
                  </td>
                </tr>

              </tbody>
            </table>
          </div>
      </div>        
   
  <hr/>
    <% end %>  