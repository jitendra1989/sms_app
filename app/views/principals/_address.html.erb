  <%= fields_for (addresstype) do |adrs| %>
         <div class="form-content">
          <div class="form-content-inner">         
        <%if addresstype=="Correspondance"%>
        <%= adrs.hidden_field :address_type, :value => "Correspondance" %>
         <h4 class="mg-h4">Correspondance Address </h4>
        <%end%>
        <%if addresstype=="Permanent"%>
        <%= adrs.hidden_field :address_type, :value => "Permanent" %>
         <h4 class="mg-h4"><%= t('permanentaddress') %></h4>
        <%end%>
         <%if addresstype=="workAddress"%>
        <%= adrs.hidden_field :address_type, :value => "workAddress" %>
         <h4 class="mg-h4">Office Address </h4>
        <%end%>
        <%if addresstype=="Temporary"%>
        <%= adrs.hidden_field :address_type, :value => "Temporary" %>
         <h4 class="mg-h4"><%= t('temporaryaddress') %></h4>
        <%end%>
         <%= adrs.hidden_field :is_deleted, :value => 0 %>
           
            <table width="100%" cellspacing="0" cellpadding="0" border="0" class="student-form-cls">
              <tbody>
                <tr>
                  <td width="33%" valign="bottom">
                    <label class="mg-label" for="address_line1"><%= t('addressline1') %>
                      <span class="required-field">*</span>
                    </label>
                  </td>

                  <td> </td>
                  <td width="33%" valign="bottom">
                    <label class="mg-label" for="address_line2"><%= t('addressline2') %></label>
                  </td>
                  <td> </td>
                  <td width="33%" valign="bottom">
                     <label class="mg-label" for="city"><%= t('city') %>
                        <span class="required-field">*</span>
                     </label>
                  </td>
                </tr>
                <tr>
                  <td valign="top">
                     <%= adrs.text_field :address_line1 ,:class=>"mg-text-field"%>
                  </td>
                  <td> </td>
                  <td valign="top">
                    <%= adrs.text_field :address_line2 ,:class=>"mg-text-field"%>
                  </td>
                  <td> </td>
                  <td valign="top">
                    <%= adrs.text_field :city ,:class=>"mg-text-field"%>
                  </td>
                </tr>

                <tr>
                  <td width="33%" valign="bottom">
                    <label class="mg-label" for="state"><%= t('state') %>
                      <span class="required-field">*</span>
                    </label>
                  </td>

                  <td> </td>
                  <td width="33%" valign="bottom">
                    <label class="mg-label" for="pin_code"><%= t('pincode') %>
                        <span class="required-field">*</span>
                    </label>
                  </td>
                  <td> </td>
                  <td width="33%" valign="bottom">
                     <label class="mg-label" for="country"><%= t('country') %>
                      <span class="required-field">*</span>
                     </label>
                  </td>
                </tr>
                <tr>
                  <td valign="top">
                     <%= adrs.text_field :state ,:class=>"mg-text-field"%>
                  </td>
                  <td> </td>
                  <td valign="top">
                    <%= adrs.text_field :pin_code ,:class=>"mg-text-field"%>
                  </td>
                  <td> </td>
                  <td valign="top">
                    <%= adrs.text_field :country ,:class=>"mg-text-field"%>
                  </td>
                </tr>
                <tr>
                  <td width="33%" valign="bottom">
                    <label class="mg-label" for="landmark"><%= t('landmark') %>
                     
                    </label>
                  </td>
                </tr>
                <tr>
                  <td valign="top">
                    <%= adrs.text_field :landmark ,:class=>"mg-text-field"%>
                  </td>
                </tr>

              </tbody>
            </table>
          </div>
      </div>        
   

    <% end %>  