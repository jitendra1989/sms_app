<h4 class="mg-h4"><%= t('albums_list')%></h4>
<div class="mg_pagination">
<table class="batch-tbl mg-tbl-margin">   <!-- border="2" --> 
 <tr >
    <th><%=t('name')%></th>
    <th> <%=t('event')%></th>
    <th><%=t('description')%></th>
    <th class="mg-align-center"><%=t('actions')%></th>
  </tr>
  <% @albums_list.each do |e| %>
    <tr>
      <td><%= e.name %></td>
      <td>
      <%event=MgEvent.find(e.mg_event_id)%>
      <%=  event.title%>
      </td>
      <td><%= e.description %></td>
      <td class="mg-align-center">
           <%= link_to "<i class=\"fa fa-picture-o\"></i>".html_safe, {:controller => "albums", :action => "albums_photos",:id =>e.id} , :method=>'get' ,:title=>'view_photos' ,:class=>"mg-icon-btn"%>
      </td>
    </tr>
  <% end %>
</table>
 <%= will_paginate @albums_list, :container => false %>
  </div>
<%#=hidden_field_tag :type , @type%>
