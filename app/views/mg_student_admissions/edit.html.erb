<% navigation_add t('about_student'),:controller=>'mg_student_admissions',:action=>'index' %>
<% navigation_add t('edit_student'),:controller=>'mg_student_admissions',:action=>'edit',:id=>@admission.id %>
<%=render :partial=>'entrance_exam_details/entrance_exam_left' %>
<h4 class="mg-h4"><%=t('edit_student_details')%></h4>
<%= render 'form' %>
<%= render 'common_left_close' %>

<script>
$(document).ready(function () {

	if($("#previousEdcuationCheckedId").is(':checked'))
	  $("#studentPreviousEdcuationDivId").show();  // checked
	else{
    $("#studentPreviousEdcuationDivId").hide();  // unchecked
  }
    

	$("#previousEdcuationCheckedId").change(function(){
	  if($("#previousEdcuationCheckedId").is(':checked'))
	  {
	    $("#studentPreviousEdcuationDivId").show();  // checked
	  }
	  else{
	    $("#studentPreviousEdcuationDivId").hide();

	  }
	});

	dateFormatStr =  getJsDateFormat();
	var dobDate =  $.datepicker.formatDate(dateFormatStr,new Date($('.date_of_birth').val()));
	$('.date_of_birth').val(dobDate);
 
 var value=$("#mg_student_admission_sibling_admission_date").val();
  if(!(value=="")){
    var siblingDOB=$.datepicker.formatDate(dateFormatStr,new Date($('.admission_dates').val()));
    $('.admission_dates').val(siblingDOB);
  }
	

	var scholarshipStartDate=$.datepicker.formatDate(dateFormatStr,new Date($('#mg_student_admission_start_date').val()));

	$('#mg_student_admission_start_date').val(scholarshipStartDate);

	var scholarshipEndDate=$.datepicker.formatDate(dateFormatStr,new Date($('#mg_student_admission_end_date').val()));
	
	$('#mg_student_admission_end_date').val(scholarshipEndDate);

	var categoryvalue=$( ".mg-category-class option:selected" ).text();
	if (categoryvalue=="Employee Child")
	{
	  $('#studentEmployeeChildId').show();
	}
	if (categoryvalue=="Management")
	{
	  $('#studentManagementQuotaId').show();
	}
	if (categoryvalue=="On Scholarship")
	{
	  $('#studentScholarshipId').show();
	}
  focusCurrentTab("manageStudentLID","manageStudentID");
});

$("#mg_student_admission_mg_student_category_id").change(function(){
      var category=$( "#mg_student_admission_mg_student_category_id option:selected" ).text();
      if (category=="Employee Child")
      {
        if ($('#studentManagementQuotaId').is(':visible')) 
        {   
          // $(".mg-management-field").val('');
          $('#studentManagementQuotaId').hide();
        }
        if ($('#studentScholarshipId').is(':visible')) 
        {   
          // $(".mg-scholarship-field").val('');
          $('#studentScholarshipId').hide();
        }
          $('#studentEmployeeChildId').show();
      }
      if (category=="Management")
      {
        if ($('#studentEmployeeChildId').is(':visible')) 
        {   
          $('#studentEmployeeChildId').hide();
          // $(".mg-emp-child-field").val('');
        }

        if ($('#studentScholarshipId').is(':visible')) 
        {   
          $('#studentScholarshipId').hide();
          // $(".mg-scholarship-field").val('');
        }
          $('#studentManagementQuotaId').show();
      }
      if (category=="On Scholarship")
      {
        if ($('#studentEmployeeChildId').is(':visible')) 
        {   
          $('#studentEmployeeChildId').hide();
          // $(".mg-emp-child-field").val('');
        }

        if ($('#studentManagementQuotaId').is(':visible')) 
        {   
          $('#studentManagementQuotaId').hide();
          // $(".mg-management-field").val('');
        }
        $('#studentScholarshipId').show();
      }
    
      if (category=="General")
      {
        if ($('#studentEmployeeChildId').is(':visible')) 
        {   
          $('#studentEmployeeChildId').hide();
          // $(".mg-emp-child-field").val('');
        }

        if ($('#studentManagementQuotaId').is(':visible')) 
        {   
          $('#studentManagementQuotaId').hide();
          // $(".mg-management-field").val('');
        }

        if ($('#studentScholarshipId').is(':visible')) 
        {   
          $('#studentScholarshipId').hide();
          // $(".mg-scholarship-field").val('');
        }
      }
    });
</script>