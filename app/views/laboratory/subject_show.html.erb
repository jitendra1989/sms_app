   <tr>
     <td valign="top">
   		<label class="mg-label"> <%= t('name')%></label>
   	 </td>
   	 <td valign="top">
  		<%if @subject.name.present?%>
     <%=@subject.name%>
     <%else%>
     <%="No Data"%>
     <%end%>
  	 </td>
 </tr>
 <tr>
     <td valign="top">
   		<label class="mg-label"> <%= t('description')%></label>
   	 </td>
   	 <td valign="top" style="width: 100%;">
  		<%if @subject.description.present?%>
     <%#=@library.description%>
     
 <%#= text_area_tag "details",@subject.description, :readonly => true,:style=>"width: 500px; height: 100px;"%>
  <%=@subject.description%>
     
     <%else%>
     <h5><%="No Data"%></h5>
     <%end%>
  	 </td>
 </tr>

</table>
