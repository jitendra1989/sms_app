<!-- Sec --> 
<h4 class="mg-h4"><%= t('school_list') %></h4>
<div class="mg_pagination">

<div class="mg-tbl-margin">
 <table class="batch-tbl mg-tbl-layout mg-left-align-nil mg-table-normal-whitespace">
  <tr>
                          <th><%=t("school_name")%></th>
                          <th><%=t("school_code")%></th>
                          <th>Address</th>
                          <th>Mobile Number</th>
                          <th>Email Id</th>
                          <th>Fax Number</th>
                          <th>User Action</th>
                        </tr>
                       <% @schools.each do |schools| %>
                        <tr>
                          <td><%=schools.school_name %></td>
                          <td><%=schools.school_code %></td>
                          <td><%=schools.address_line1%><br/>
                              <%=schools.street %><br/>
                              <%=schools.city %><br/>
                              <%=schools.state %><br/>
                              <%=schools.pin_code %><br/>
                          </td>
                          <td><%=schools.mobile_number %></td>
                          <td><%=schools.email_id %></td>
                          <td><%=schools.fax_number %></td>

                          <td style="width: 90px;">
                              <button id="editSchool-<%=raw schools.id %>" title="Edit" class="editschool mg-icon-btn" style="float: left; margin-right: 1px;"><i class="fa fa-pencil-square-o"></i></button>
                              <%= link_to "<i class=\"fa fa-trash\"></i>".html_safe, school_path(schools),method: :delete, data: { confirm: 'Are you sure?' } ,:title=>"Delete" ,:class=>"mg-icon-btn" %>

                              <% if session[:user_type] == "cloudadmin" %>
                                   <%= link_to '<i class="fa fa-plus"></i>'.html_safe, add_school_data_path(schools) ,:class=>"mg-icon-btn" ,:title=>"Add Data"%>
                              <% end %>
                                            
                            </td>
  </tr>
  <%end%>
</table>

</div>
<%= will_paginate @schools, :container => false %>
</div>
<div id="schoolDialogID" class="mg-padding-nil">

</div>