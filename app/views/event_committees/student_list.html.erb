

<h4 class="mg-h4"><%= t('student_list')%></h4>
<%=hidden_field_tag :mg_event_committee_id, @mg_event_committee_id%>
<%=hidden_field_tag :mg_batch_id, @mg_batch_id%>
<div class="mg-scroll-employee-bar">
	<table class="batch-tbl mg-tbl-margin">
	<tr>
		<th><%=t('name')%></th>
		<th><%=t('admission_number')%></th>

		<th><%=t('actions')%>
		 <div class="mg-text-margin">
        <a class="select-all-student-for-commitee mg-pop-link"><%=t('all')%></a>&nbsp;<a class="select-none-student-for-commitee mg-pop-link"><%=t('none')%></a>
      </div></th>
	</tr>
		<%@student_list.each do |student|%>
			<tr>
				<td><%=student.first_name%> <%=student.last_name%> </td>
				<td><%=student.admission_number%></td>
				<%if  @event_committee_member_list.include? student.id%>
				 	<td class="mg-align-center"><%= check_box_tag 'mg_student_id[]', student.id, true ,{:class=>"class-event-committee-class"}%></td>
				 <%else%>
				 	<td class="mg-align-center"><%= check_box_tag 'mg_student_id[]', student.id, false ,{:class=>"class-event-committee-class"}%></td>
				 <%end%>
			  </tr>
		<%end%>
	</table>
</div>
