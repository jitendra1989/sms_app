  </p>


<script>

$(document).ready(function () {
  $('#addStudentCommitteeSubmitFormID').attr("disabled", true);
});

	 $(document).on("click", ".select-all-student-for-commitee", function(e){

    $(".class-event-committee-class").prop('checked', true);
        e.preventDefault();
  });
   $(document).on("click", ".select-none-student-for-commitee", function(e){
    $(".class-event-committee-class").prop('checked', false);
        e.preventDefault();
  });
</script>