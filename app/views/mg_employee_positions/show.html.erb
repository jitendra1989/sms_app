<h1>Listing Details</h1>
<% @articles =  MgEmployeePosition.where(:is_deleted=>0,:mg_school_id=>session[:current_user_school_id]) %>

<table border="1">
<tr align="left">   <%= link_to 'Add Position!', mg_employee_positions_path,  :controller => :categories, :action => :index  %>  </tr>
  <tr>
    <th>Category</th>
    <th>Profile name</th>
    <th>Status</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.mg_employee_category_id %></td>
      <td><%= article.position_name %></td>
      <td><%= article.status %></td>
      <td><%= link_to "<i class=\"fa fa-pencil-square-o\"></i>".html_safe, edit_mg_employee_position_path(article) ,:title=>"Edit" ,:class=>"mg-icon-btn"%></td>
      <td><%= link_to "<i class=\"fa fa-trash\"></i>".html_safe, mg_employee_position_path(article),
                    method: :delete, data: { confirm: 'Are you sure?' } ,:title=>"Delete" ,:class=>"mg-icon-btn"%></td>
    </tr>
  <% end %>
</table>