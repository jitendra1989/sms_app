<%= form_for :specialization, :url=>@action=='new' ? '/healthcare/create_specialization' : '/healthcare/update_specialization/'+@specialization.try(:id).to_s, :method=> @action=='new' ? "post" : "patch" , :html => {:id => 'healthSpecialistCreateID'} do |f| %>    

  <%= f.hidden_field :is_deleted, :value => 0 %>
  <%= f.hidden_field :mg_school_id, :value => session[:current_user_school_id] %>
  <%if @action=='new'%>
    <%= f.hidden_field :created_by, :value => session[:user_id] %>
  <%end%>
  <%= f.hidden_field :updated_by, :value => session[:user_id] %>

  <p>
    <%= f.label :name, t('name') ,:class=>"mg-label"%><span class="required-field"> *</span><br>
    <%= f.text_field :name  ,:class => 'mg-select-btn'%><br>

  </p>

  <p>
    <%= f.label :description, t("description") ,:class=>"mg-label"%><br>
      <%= f.text_area :description, :class=> 'mg-select-btn' %>
  </p>

  <p class="mg-p-mgtop">
    <a onclick="$(this).closest('form').submit()" class="mg-small-form-btn"><%=t("save")%></a>
    <a class="mg-small-form-btn cancel-form-dialog"><%=t('cancel')%></a>
  </p>
<% end %>
<script>
$(document).ready(function () {
  $("#healthSpecialistCreateID").validate({

    rules: {
      "specialization[name]": {required: true,name_validate: true}
    }
  });
});
</script>
